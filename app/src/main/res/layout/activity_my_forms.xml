<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyFormsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@id/modFormBtn"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WysÅ‚ane"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20sp"/>

        <TextView
            android:id="@+id/formsListTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formularz1\nFormularz2"
            android:layout_marginHorizontal="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/modFormBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modyfikuj"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40sp"
        android:layout_marginHorizontal="50sp"
        android:textSize="20sp"
        android:textAllCaps="false"
         />
</androidx.constraintlayout.widget.ConstraintLayout>