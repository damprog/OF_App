<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="171dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/newFormBtn" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bieżące projekty"
            android:textSize="30sp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20sp"
            />

        <TextView
            android:id="@+id/projectsListTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Projekt1\nProjekt2"
            android:layout_marginHorizontal="20sp"
            android:enabled="true"
            android:textIsSelectable="true"
            android:contextClickable="true"
            android:focusable="true"
            android:longClickable="true"/>

        <ListView
            android:id="@+id/projectsListLV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/newFormBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="40sp"
        android:layout_marginHorizontal="50sp"
        android:textSize="20sp"
        android:text="Nowy formularz"
        android:textAllCaps="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>