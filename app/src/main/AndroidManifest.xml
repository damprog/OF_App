<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.of_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OF_App">
        <activity
            android:name=".FormActivity"
            android:label="Formularz"
            android:parentActivityName=".MyFormsActivity"/>
        <activity
            android:name=".MyFormsActivity"
            android:label="Moje formularze"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".NewFormActivity"
            android:label="Nowy formularz"
            android:parentActivityName=".ProjectsActivity"/>
        <activity
            android:name=".ProjectsActivity"
            android:label="Projekty"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".MainActivity"
            android:label="Ekran główny" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="Logowanie">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>